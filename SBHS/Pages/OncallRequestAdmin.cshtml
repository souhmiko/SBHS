@page
@model SBHS.Pages.OncallRequestAdminModel

@{
    ViewData["Title"] = "OncallRequestAdmin";
}

<style>
    h2 {
        text-align: center;
        margin-top: 30px;
    }

    .table, td, th {
        border: 1px solid black;
    }

    .table {
        background-color: #fff;
        padding: 20px;
        border-collapse: collapse;
        position: center;
    }

    td {
        border-collapse: collapse;
        padding: 0.65em 1em;
    }

    th {
        text-align: center;
    }

</style>


<h2>Oncall Request</h2>
<hr/>

@if (Model.OncallRequests.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.OncallRequests[0].UserDetail)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OncallRequests[0].UserDetail.DepartmentId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OncallRequests[0].DateTimeOnCall)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OncallRequests[0].LeaveStatus)
                </th>
                <th>
                    Action
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OncallRequests)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserDetail.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserDetail.Department.DepartmentName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateTimeOnCall)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LeaveStatus.LeaveStatusName)
                    </td>

                    <td>
                        <form method="post">
                            <input type="hidden" name="RequestId" value="@item.Id" />
                            <button type="submit" name="Action" value="Approve" class="btn btn-success">
                                <i class="fa-solid fa-check"></i>
                            </button>
                            <button type="submit" name="Action" value="Reject" class="btn btn-danger">
                                <i class="fa-solid fa-xmark"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No Oncall requests</p>
}