@page "{id?}"
@model SBHS.Pages.ViewFileModel
@{
    Layout = null;
}

@if (Model.DocumentData != null)
{
    <div style="width: 100vw; height: 100vh;">
        <embed src="data:application/pdf;base64,@Convert.ToBase64String(Model.DocumentData)" style="width: 100%; height: 100%;" type="application/pdf" />
    </div>
}
else
{
    <p>Document not found.</p>
}