@page "/user/Index"
@model SBHS.Pages.LeaveReqAdmin.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Leave Requests</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LeaveRequests[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeaveRequests[0].EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeaveRequests[0].Reason)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeaveRequests[0].Days)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeaveRequests[0].UploadDocument)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.LeaveRequests[0].LeaveStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeaveRequests[0].LeaveType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeaveRequests[0].UserDetail)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.LeaveRequests) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reason)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Days)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UploadDocument)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.LeaveStatus.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LeaveType.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserDetail.AspNetUserId)
            </td>
            <td>
                    <a asp-page="./LeaveDetails" asp-route-id="@item.Id" class="btn btn-info">
                        <i class="fas fa-info-circle"></i> Details
                    </a>
            </td>
        </tr>
}
    </tbody>
</table>
